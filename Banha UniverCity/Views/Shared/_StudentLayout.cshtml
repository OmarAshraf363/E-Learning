<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Bfcai Platform</title>

    <!-- Bootstrap CSS -->
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/main.min.css' rel='stylesheet' />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.0.1/dist/fullcalendar.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.0.1/dist/fullcalendar.min.css" rel="stylesheet">
    <link href="~/css/studentLay.css" rel="stylesheet" />

   
</head>

<body>

    <!-- Navbar -->
    <header style="" class="container-fluid">
        <div class="container head ">
            <h1>BFC<span>ai</span></h1>

            <nav>
                <ul class="d-flex list-unstyled justify-content-start align-items-center gap-4">
                    <li><a asp-area="Student" asp-controller="Dashboard" class="btn btn-outline-primary">Home</a></li>
                    <li><a href="/Student/Courses/Index">MyCourses</a></li>
                    <li><a asp-area="Customer" asp-controller="Community" asp-action="Index">Communites</a></li>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index">Courses Page</a>
                </ul>
            </nav>
            <nav>
               

                <partial name="_LoginPartial"></partial>

            </nav>
        
        </div>
    </header>

    <!-- Sidebar -->
 

    <!-- Main content -->
    <div class="container-fluid ">
        @RenderBody()
    </div>

    <div class="modal fade" id="contentModal" tabindex="-1" aria-labelledby="contentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <!-- modal-lg for wider layout -->
            <div class="modal-content shadow-lg border-0 rounded-3">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="contentModalLabel">Content</h5>
                    <button type="button" class="btn btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="modal-body px-4 py-3" id="modalContentBody">
                    <!-- سيتم تعبئة المحتوى هنا عبر AJAX -->
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading..</span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Scripts -->

    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/main.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/student.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
