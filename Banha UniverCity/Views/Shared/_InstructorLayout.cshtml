<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BFCai Instructor</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
   
    <link href="~/css/all.min.css" rel="stylesheet" />
    <!-- Custom CSS for styling -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Custom CSS -->
    <style>
        main{
            overflow:auto;
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: white; /* Light gray background for the body */
        }

        .navbar-custom {
            background-color: transparent; /* Dark blue for the navbar */
        }

            .navbar-custom a.navbar-brand {
                color: #ffffff; /* White text for the navbar brand */
            }

            .navbar-custom .nav-link {
                color: #ffffff; /* White text for the navbar links */
            }

                .navbar-custom .nav-link:hover {
                    color: #ffcc00; /* Gold color on hover */
                }

        .sidebar {
            height: 100vh;
            background-color: #2d2f31; /* Even darker blue for the sidebar */
            padding-top: 20px;
            width: 250px;

        }

            .sidebar a {
                color: #dcdcdc; /* Light gray text for sidebar links */
                padding: 10px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #004080; /* Slightly lighter blue for hover effect */
                    color: #ffffff; /* White text on hover */
                }

        .content-wrapper {
            margin-left: 250px; /* Adjust margin to account for the fixed sidebar */
            padding: 20px;
            min-height: 100vh; /* Ensure the content area covers the full viewport height */
        }

        footer {
            background-color: #003366; /* Matching dark blue for the footer */
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            width: calc(100% - 250px); /* Adjust width to account for the sidebar */
            bottom: 0;
            left: 250px; /* Align footer with the content wrapper */
        }

        /* Add a hover effect for the sidebar links */
        .sidebar a:hover {
            background-color: #004080;
            color: #ffffff;
            border-radius: 4px;
        }

        /* Add some padding to the footer */
        footer p {
            margin: 0;
        }

     
      
    </style>
</head>
<body>

    <!-- Navbar -->
   

    <!-- Sidebar -->
    <main class="d-flex">
        <div class="sidebar">
            <a asp-area="@StaticData.role_Instructor" asp-controller="Instructor" asp-action="Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a asp-area="@StaticData.role_Instructor" asp-controller="Exam" asp-action="Index"></i> Manage Exams</a>
            <a asp-area="@StaticData.role_Instructor" asp-controller="Instructor" asp-action="Courses" ><i class="fas fa-book"></i> Courses</a>
            <a asp-area="@StaticData.role_Instructor" asp-controller="Assinment" asp-action="Index"><i class="fas fa-book"></i> Assinments</a>

            
            <a href="@Url.Action("Grades")"><i class="fas fa-graduation-cap"></i> Grades</a>
            <a asp-area="Instructor" asp-controller="Student" asp-action="Index"><i class="fas fa-users"></i> Students</a>
            <a href="@Url.Action("Reports")"><i class="fas fa-chart-line"></i> Reports</a>
            <a href="@Url.Action("Settings")"><i class="fas fa-cogs"></i> Settings</a>
        </div>

        <!-- Main Content -->
        <main role="main" class="  col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
            <nav class="navbar navbar-expand-lg navbar-custom">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <partial name="_LoginPartial"> </partial>
                        </li>

                    </ul>
                </div>
            </nav>
            @RenderBody()
        </main>
    </main>

    <!-- Footer -->
   

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
