<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BFCai Instructor</title>

    <!-- Bootstrap 5 & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/InstructorLayout.css" rel="stylesheet" />
</head>
<body class="d-flex overflow-hidden">

    <!-- Sidebar -->
    <nav class="sidebar bg-dark text-white p-3 vh-100 position-fixed" style="width: 250px;">
        <h5 class="mb-4"><i class="fas fa-chalkboard-teacher me-2"></i>Instructor</h5>
        <ul class="nav flex-column">
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-area="@StaticData.role_Instructor" asp-controller="Instructor" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Exam" asp-action="Index"><i class="fas fa-file-alt me-2"></i> Manage Exams</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="InstructorCourse" asp-action="Index"><i class="fas fa-book me-2"></i> Courses</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Assinment" asp-action="Index"><i class="fas fa-tasks me-2"></i> Assignments</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" href="@Url.Action("Grades")"><i class="fas fa-graduation-cap me-2"></i> Grades</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" asp-controller="Student" asp-action="Index"><i class="fas fa-users me-2"></i> Students</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" href="@Url.Action("Reports")"><i class="fas fa-chart-line me-2"></i> Reports</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Settings")"><i class="fas fa-cogs me-2"></i> Settings</a></li>
        </ul>
    </nav>

    <!-- Main content container -->
    <div class="flex-grow-1 ms-250 d-flex flex-column vh-100 overflow-hidden" style="margin-left: 250px;">

        <!-- Navbar -->
        <header class="navbar navbar-expand-lg align-items-center navbar-dark  px-4">
            <h4>@User.Identity?.Name</h4>
            <div class="container-fluid justify-content-end">
                <partial name="_LoginPartial" />
            </div>
        </header>

        <!-- Page content (scrollable) -->
        <main class="overflow-auto p-4" >
            @RenderBody()
        </main>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="contentModal" tabindex="-1" aria-labelledby="contentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow rounded">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="contentModalLabel">Content</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalContentBody">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading..</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/instructor.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
