@model BFCAI.Models.ViewModels.CartVM
<style>
    .summary {
        position: static;
        top: auto;
        right: auto;
        transition: all 0.3s ease-in-out;
    }

    .summary.fixed {
        position: fixed;
        top: 75px;
        right: 30px;
    }
</style>

<section class="container py-5">
    @if (TempData["Error"]!=null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
        
    }
    <div class="row">
        <!-- Cart Items Section -->
        <div class="col-lg-8 mb-4">
            <h4 class="mb-4">Your Shopping Cart</h4>

            @if (Model.CartItems.Any())
            {
                @foreach (var item in Model.CartItems)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <!-- Product Image Placeholder -->
                                <img src="~/Covers/@item.Course?.ImgCover" class="img-fluid rounded-start" alt="@item.Course.CourseName">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Course?.CourseName</h5>
                                    <p class="card-text text-muted">Instructor: @item.Course?.Instructor</p>
                                    <p class="card-text"><strong>@item.Price</strong></p>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-center justify-content-center">
                                <div class="d-flex flex-column align-items-center">
                                    <!-- Quantity Control -->

                                    <form  asp-action="RemoveFromCart" asp-route-id="@item.Id">
                                        <button class="btn btn-light offset-lg-6 btn-sm" type="submit"><i class="text-danger fa-solid fa-xmark"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Your cart is currently empty!
                </div>
            }
        </div>

        <!-- Cart Summary Section -->
        <div class="summary col-lg-4" id="summary">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <p>Total Courses</p>
                        <p>@Model.CartItems.Count()</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Subtotal</p>
                        <p>@Model.CartItems.Sum(i => i.Price)</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Tax (10%)</p>
                        <p>@(Model.CartItems.Sum(i => i.Price) * 0.1M)</p>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <h6>Total</h6>
                        <h6>@(Model.CartItems.Sum(i => i.Price) * 1.1M)</h6>
                    </div>
                    <a asp-action="Pay" class="btn btn-primary btn-lg w-100 mt-4">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Model.Courses.Any())
{
    <section id="courses" class="courses container p-3 mb-5">
        <div class="mb-4">
            <h4>You might also like</h4>
        </div>
        <div id="main" class="top-courses ">
            @foreach (var course in Model.Courses)
            {
                if (course == null)
                {
                    <div class="alert alert-warning">Course data is missing!</div>
                }
                else
                {

                    <div id="card-@course.CourseID" class="one-course" onclick="goTo('Customer','Home','Courses',@course.CourseID)" onmouseover="openModalWhenHover(@course.CourseID, 'main')" onmouseleave="closeModal(@course.CourseID, 'main')">
                        <div class="course-video mb-3">
                            <img src="/Covers/@course.Image" alt="Alternate Text" />
                        </div>
                        <div class="course-title">
                            <h5>@course.Title</h5>
                        </div>
                        <div class="w-75 instructor">
                            <h6>@course.InstructorName</h6>
                        </div>

                        <!-- Rating -->
                        <div class="rating">
                            @for (int i = 0; i < course.Rate; i++)
                            {
                                <span class="fa fa-star"></span>
                            }
                            @for (int i = 0; i < (5 - course.Rate); i++)
                            {
                                <span class="fa fa-star-o"></span>
                            }
                        </div>

                        <!-- Price -->
                        <div class="price">
                            <span> $@course.Price</span>
                        </div>

                        <!-- Hidden modal for each course -->
                        <div class="modal-test p-4" id="modal-main-@course.CourseID" style="max-width: 700px; box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1); border-radius: 10px; background-color: #fff;">
                            <!-- Course Name Section -->
                            <div class="modal-course-header ">
                                <h3 class="modal-course-name mb-3">@course.Title</h3>
                                <h5>by <span>@course.InstructorName</span></h5>
                            </div>

                            <!-- Course Stats Section -->
                            <div class="modal-course-details d-flex justify-content-between mb-2">
                                <div class="course-videos">
                                    <span><i class="fas fa-play-circle me-2"></i>@course.VideosCount Videos</span>
                                </div>

                                <div class="course-enrollments">
                                    <span><i class="fas fa-users me-2"></i>@course.NumOfEnrolments Enrolled</span>
                                </div>
                            </div>

                            <!-- Course Description Section -->
                            <div class="modal-course-description mb-2">
                                <p> @course.Description</p>
                            </div>

                            <!-- Course Topics and Objectives Section -->
                            <div class="modal-course-about ">

                                <div class="course-objectives ">

                                    <ul class="list-unstyled">
                                        @foreach (var item in course.LearningObjectives)
                                        {
                                            <li class="d-flex justify-content-start align-items-baseline gap-1">

                                                <i class="fas fa-check-circle text-success me-2"></i>

                                                <p class="m-1"> @item</p>


                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            <!-- Course Call to Action -->
                            <div class="d-flex justify-content-center mt-2">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-courseId="@course.CourseID" asp-route-quantity="1" class="btn cus-btn px-5 py-2" style="border-radius: 5px; font-size: 1.1rem;">Add to Cart</a>
                            </div>
                        </div>
                    </div>

                }

            }
        </div>
    </section>

}



