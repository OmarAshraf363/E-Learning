@model BFCAI.Models.ViewModels.CoursesByDepartmentVM

@if (!string.IsNullOrEmpty(Model.DepartmentDescription))
{
    <div class="department-Description">
        <p class="w-75">@Model.DepartmentDescription</p>
    </div>
}

@foreach (var course in Model.Courses.Items)
{
    var rate = course.Rate;
    var remainingStars = 5 - rate;
    var objectives = course.LearningObjectives ?? new List<string>();

    <div id="card-@course.CourseID"
         class="one-course"
         onclick="goTo('Customer','Home','Details',@course.CourseID)"
         onmouseover="openModalWhenHover(@course.CourseID, 'specific')"
         onmouseleave="closeModal(@course.CourseID, 'specific')">

        <div class="course-video mb-3">
            <img src="/Covers/@course.Image" alt="@course.Title" />
        </div>

        <div class="course-title">
            <h5>@course.Title</h5>
        </div>

        <div class="w-75 instructor">
            <h6>@course.InstructorName</h6>
        </div>

        <div class="rating">
            @for (int i = 0; i < rate; i++)
            {
                <span class="fa fa-star"></span>
            }
            @for (int i = 0; i < remainingStars; i++)
            {
                <span class="fa fa-star-o"></span>
            }
        </div>

        <div class="price">
            <span>$@course.Price</span>
        </div>

        <div class="modal-test p-4" id="modal-specific-@course.CourseID"
             style="max-width: 700px; box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1); border-radius: 10px; background-color: #fff;">

            <div class="modal-course-header">
                <h3 class="modal-course-name mb-3">@course.Title</h3>
                <h5>by <span>@course.InstructorName</span></h5>
            </div>

            <div class="modal-course-details d-flex justify-content-between mb-2">
                <div class="course-videos">
                    <span><i class="fas fa-play-circle me-2"></i>@course.VideosCount Videos</span>
                </div>

                <div class="course-enrollments">
                    <span><i class="fas fa-users me-2"></i>@course.NumOfEnrolments Enrolled</span>
                </div>
            </div>

            <div class="modal-course-description mb-2">
                <p>@course.Description</p>
            </div>

            <div class="modal-course-about">
                <div class="course-objectives">
                    <ul class="list-unstyled">
                        @foreach (var obj in objectives)
                        {
                            <li class="d-flex justify-content-start align-items-baseline gap-1">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <p class="m-1">@obj</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-2">
                <button class="btn cus-btn px-5 py-2" style="border-radius: 5px; font-size: 1.1rem;">Add to Cart</button>
            </div>
        </div>
    </div>
}
