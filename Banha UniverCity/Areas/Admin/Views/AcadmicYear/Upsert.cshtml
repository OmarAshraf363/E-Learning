@model Banha_UniverCity.Models.AcademicYear

@{
    ViewData["Title"] = "Upsert Academic Year";
}




<form id="UpsertForm" asp-action="UpSert" method="post">
    <div class="modal-header">

        <h2 class="text-center">
            @if (Model.AcademicYearID == 0)
            {
                <text>Create New Academic Year</text>
            }
            else
            {
                <text>Edit Academic Year</text>
            }
        </h2>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <input asp-for="AcademicYearID" type="hidden" />
            <label asp-for="YearName"></label>
            <input asp-for="YearName" class="form-control bg-dark text-light" placeholder="Like This 2020-2021" />
            <span asp-validation-for="YearName" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" onclick="allConfirm('UpsertForm')" class="btn btn-primary">
            @if (Model.AcademicYearID == 0)
            {
                <text>Create</text>
            }
            else
            {
                <text>Update</text>
            }
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>



