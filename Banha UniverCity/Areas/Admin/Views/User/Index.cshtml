@model IEnumerable<ApplicationUser>
@inject UserManager<IdentityUser> _userManager
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <h2 class="text-center">User Management</h2>

    <a asp-action="Register" asp-controller="Account" asp-area="Identity" class="btn btn-primary mb-3">
        <i class="fas fa-user-plus"></i> Add New User
    </a>

    <h3>@(Model.Any(e => e.UserType == StaticData.role_Student) ? "Students" : "Instructors")</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.UserName</td>
                    <td>@student.Email</td>
                    <td>
                        <!-- Edit Action -->
                        <a asp-action="Upsert" asp-route-id="@student.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>

                        <!-- Delete Action -->
                        <button class="btn btn-danger" onclick="deleteIt('@student.Id')">
                            <i class="fas fa-trash"></i>
                        </button>

                        <!-- Lock/Unlock Action -->
                        @if (await _userManager.IsLockedOutAsync(student))
                        {
                            <a asp-action="UnlockUser" asp-route-id="@student.Id" class="btn btn-secondary">
                                <i class="fas fa-unlock"></i> Unlock
                            </a>
                        }
                        else
                        {
                            <a asp-action="LockUser" asp-route-id="@student.Id" class="btn btn-secondary">
                                <i class="fas fa-lock"></i> Lock
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function deleteIt(id) {
            if (confirm('Are you sure you want to delete this user?')) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Delete")',
                    data: { id: id },
                    success: function (result) {
                        window.location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('Error deleting user');
                    }
                });
            }
        }
    </script>
}
