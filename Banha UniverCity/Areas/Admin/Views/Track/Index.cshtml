@using BFCAI.Models
@model IEnumerable<Track>
<style>
    .tracks-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #0d6efd; /* Bootstrap Primary Color */
}

.tracks-header a {
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 500;
}

.tracks-header span {
    font-size: 1rem;
    color: #6c757d; /* Bootstrap Secondary Color */
}

/* Card Styles */
.one-track.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 15px;
    overflow: hidden;
}

.one-track.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.one-track .card-header {
    background-color: #343a40;
    font-size: 1.2rem;
    font-weight: 600;
    color: #fff;
}

.one-track .card-body {
    background-color: #2d2d2d;
    font-size: 0.95rem;
    color: #6c757d;
}

.one-track .card-footer {
    background-color: #343a40;
    font-size: 0.9rem;
    color: #fff;
}

.one-track .btn {
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
}

/* Responsive Adjustments */
media (max-width: 768px) {
    .tracks-header h2 {
        font-size: 2rem;
    }
    .one-track .card {
        margin-bottom: 1.5rem;
    }
}

</style>
<section class="tracks container my-5 py-4">
    <!-- Header Section -->
    <div class="tracks-header d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold text-primary">Explore Our Tracks</h2>
      
        <span class="text-muted">@Model.Count() Tracks Available</span>
    </div>

    <!-- Tracks List -->
    <div class="row g-4">
        @foreach (var track in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="one-track card shadow-sm h-100 border-0">
                    <!-- Card Header -->
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                        <h5 class="m-0 text-truncate">@track.Name</h5>
                        <a asp-action="Upsert" asp-route-id="@track.Id" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body  text-secondary">
                        <p class="mb-0 text-truncate" title="@track.Description">@track.Description</p>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer bg-dark text-white d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-book"></i> @track.Courses.Count() Courses
                        </span>
                        <div>
                            <a asp-action="Details" asp-route-id="@track.Id" class="btn btn-outline-info btn-sm me-2">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Delete" asp-route-id="@track.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
