@model BFCAI.Models.Exam
<style>
    .form-group input{
        background-color:#3d3d3d;
        color:#ccc;
    }
</style>
<form id="quizForm" asp-action="UpsertQuiz" class="w-100">
    <div class="modal-header bg-dark text-white">
        <h5 class="modal-title text-light">@((Model.ExamID == 0) ? "Add New Quiz" : "Edit Quiz")</h5>
        <button type="button" class="btn fw-bolder btn-close text-warning" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">

        <input asp-for="ExamID" type="hidden" class="form-control" />

    </div>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExamDate" class="control-label"></label>
            <input asp-for="ExamDate" class="form-control" />
            <span asp-validation-for="ExamDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="CourseID" class="form-control" />
            <input type="hidden" asp-for="InstructorId" class="form-control" />


        </div>
        <div class="form-group">

            <input type="hidden" asp-for="CurriculumId" class="form-control" />

        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">

            <input type="button" onclick="allConfirm('quizForm')" value="@(Model.ExamID==0? "Create":"Save Changes")" class="btn btn-primary" />
        </div>
    </div>
</form>