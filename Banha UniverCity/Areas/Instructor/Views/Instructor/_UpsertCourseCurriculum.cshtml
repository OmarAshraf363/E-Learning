@model Banha_UniverCity.Models.CourseCurriculum

<form asp-action="UpsertCourseCurriculum" asp-area="Instructor" asp-controller="Instructor" method="post">
    <div class="modal-header bg-primary text-white">

        <h5 class="modal-title">@((Model.CourseCurriculumID == 0) ? "Add New Curriculum" : "Edit Curriculum")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>

        <h5 class="modal-title text-light">@((Model.CourseCurriculumID == 0) ? "Add New Curriculum" : "Edit Curriculum")</h5>
        <button type="button" class="btn fw-bolder btn-close text-warning" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>

    </div>

    <div class="modal-body">
        <div class="form-group mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" placeholder="Enter curriculum title" required />
            <div class="form-text text-muted">Please provide a meaningful title for the curriculum.</div>
        </div>

        <div class="form-group mb-3">
            <label for="Content" class="form-label">Content</label>
            <textarea class="form-control" id="Content" name="Content" rows="5" placeholder="Enter curriculum content" required>@Model.Content</textarea>
            <div class="form-text text-muted">Provide a detailed explanation or content for this curriculum section.</div>
        </div>
    </div>

    <div class="modal-footer">
        <input type="hidden" asp-for="CourseID"  />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
