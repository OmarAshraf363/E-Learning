@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_RegistreationLayout";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    body{
                background-color: #fff;
        font-family: Arial, sans-serif;

    }
    .row {
        display: flex;
        justify-content: center;
        gap: 50px;
        height: max-content;
        background-color: #f9f9f9;
        padding: 2rem;
        width:100%;
    }

    #login-submit {
        background-color: #532aa4;
        transition: background-color 0.3s;
    }

        #login-submit:hover {
            background-color: #6b4dcc;
        }

    .img-sec {
        width: 50%;
    }

        .img-sec img {
            width: 100%;
            height:90%;
            object-fit: cover;
            border-radius: 10px;
        }

    h2 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        color: #333;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input {
        padding: 1rem;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #532aa4;
        border-color: #532aa4;
    }

        .btn-primary:hover {
            background-color: #6b4dcc;
            border-color: #6b4dcc;
        }

    .social-login-btns {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 20px;
    }

        .social-login-btns button {
            width: 100%;
            max-width: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .social-login-btns button i {
                font-size: 1.2rem;
            }
</style>

<div class="row">
    <div class="col-md-4">
        <section class="login-container">
            <form id="account" method="post">
                <h2>Log in to your account</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <div class="mt-3">
                    <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                </div>
            </form>
        </section>

        <hr />

        <div>
            <h5 class="text-center">Or log in with</h5>
            <div class="social-login-btns">
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                            <i class="fab fa-@provider.Name.ToLower()"></i> @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>

    <div class="img-sec col-md-4">
        <img src="~/images/Screenshot 2025-01-19 113820.png" alt="Login Image" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
