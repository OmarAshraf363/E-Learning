@using BFCAI.Models.ViewModels
@model SUbCurrcula



    <div class="content-container">
        <!-- Course Header -->
        <div class="course-header">
            <h1 class="course-title">@Model.Title</h1>
            <p class="course-subtitle">@Model.Content</p>
        </div>

        <!-- Progress Indicator -->
        <div class="content-section">
            <div class="progress-indicator">
                <div class="progress-bar"></div>
            </div>
        </div>

        <div class="content-section">
            <!-- Video Section -->
            <div class="section-card">
                <div class="section-header">
                    <h4 class="section-title">
                        <i class="fas fa-play-circle"></i>
                        Videos
                    </h4>
                </div>
                <div class="section-body">
                    <div class="dropdown w-100 mb-3">
                        <button class="btn dropdown-toggle video-dropdown w-100 text-start" type="button" data-bs-toggle="dropdown">
                            Select a video to watch
                        </button>
                        <ul class="dropdown-menu w-100">
                            @foreach (var video in Model.Videos)
                            {

                                <li><a class="dropdown-item" href="#" onclick="getVideo(@video.Id, 'video-player')">@video.Title | Duration: 45 mins</a></li>
                            }
                        </ul>
                    </div>
                    <div id="video-player" class="video-player">
                        <i class="fas fa-video me-2"></i>
                        Select a video from the dropdown above
                    </div>
                </div>
            </div>

            <!-- Resources Section -->
            <div class="section-card">
                <div class="section-header">
                    <h4 class="section-title">
                        <i class="fas fa-book"></i>
                        Learning Resources
                    </h4>
                </div>
                <div class="section-body">
                    @foreach (var re in Model.Resources)
                    {

                        <div class="resource-item">
                            <a href="@re.Url" class="resource-link">
                                <i class="fas fa-link"></i>
                                @re.Title
                            </a>
                        </div>
                    }

                </div>
            </div>

            <!-- Assignments Section -->
            <div class="section-card">
                <div class="section-header">
                    <h4 class="section-title">
                        <i class="fas fa-tasks"></i>
                        Assignments
                    </h4>
                </div>
                <div class="section-body">
                    @foreach (var ass in Model.Assignments)
                    {

                        <div class="assignment-item">
                            <div class="assignment-header">
                                <a href="@ass.Url" class="assignment-link">
                                    <i class="fas fa-file-alt"></i>
                                    @ass.Title
                                </a>
                                <span class="due-date">
                                    <i class="fas fa-calendar"></i>
                                    @ass.DeadLine
                                </span>
                            </div>
                            @if (ass.Submissions.Any(e => e.AssignmentID == ass.Id))
                            {
                                <span class="submitted-badge">
                                    <i class="fas fa-check"></i>
                                    Submitted
                                </span>
                            }
                            else
                            {

                                <div class="submission-form">
                                    <div class="input-group">
                                        <input type="hidden" name="AssignmentID" value="@ass.Id" />

                                        <input type="url" class="form-control" name="SolutionURL" placeholder="Enter your solution URL (GitHub, CodePen, etc.)" required>
                                        <button class="btn submit-btn" type="submit">
                                            <i class="fas fa-upload"></i>
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            }

                        </div>
                    }


                </div>
            </div>

            <!-- Feedback Section -->
            <div class="section-card">
                <div class="section-header fed d-flex justify-content-between align-items-center">
                    <h4 class="section-title">
                        <i class="fas fa-comment-dots"></i>
                        Student Feedback
                    </h4>
                    <button onclick="UpsertFeedBack(null,null,@Model.Id)" class="btn add-feedback-btn">
                        <i class="fas fa-plus"></i>
                    Add curriculum  Feedback
                    </button>
                </div>
                <div class="section-body">
                    <div class="row">
                        @foreach (var fe in Model.Feedbacks)
                        {
                        <div class="col-md-6 mb-4">

                            <div class="feedback-card">
                                <div class="feedback-user">
                                    <img src="@fe.UserImageUrl" alt="@fe.UserName" class="user-avatar">
                                    <div class="user-info">
                                        <h6>@fe.UserName</h6>
                                        <small>@fe.CreatedAt</small>
                                    </div>
                                </div>
                                <div class="rating">
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                    <i class="fas fa-star star"></i>
                                </div>
                                <p>@fe.Content</p>
                            </div>
                        </div>
                            
                        }
                    
                    </div>
                </div>
            </div>

            <!-- Exam Section -->
            <div class="section-card">
                <div class="section-header">
                    <h4 class="section-title">
                        <i class="fas fa-clipboard-list"></i>
                        Final Assessment
                    </h4>
                </div>
                <div class="section-body text-center">
                    <p class="mb-4">Test your knowledge with our comprehensive final exam. Make sure you've completed all videos and assignments before starting.</p>
                    <button class="start-exam-btn" onclick="startExam()">
                        <i class="fas fa-play-circle"></i>
                        Start Final Exam
                    </button>
                </div>
            </div>
        </div>
    </div>




